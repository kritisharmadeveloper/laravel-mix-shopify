{% doc %}
  @prompt
    A heading with an animated glowing effect

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-glowing-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin:0;
    padding: {{ block.settings.padding }}px;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    color: {{ block.settings.text_color }};
    text-shadow: 
      0 0 {{ block.settings.glow_size }}px {{ block.settings.glow_color }},
      0 0 {{ block.settings.glow_size | times: 2 }}px {{ block.settings.glow_color }},
      0 0 {{ block.settings.glow_size | times: 3 }}px {{ block.settings.glow_color }};
    animation: ai-glow-pulse-{{ ai_gen_id }} {{ block.settings.animation_speed }}s ease-in-out infinite alternate;
  }

  @keyframes ai-glow-pulse-{{ ai_gen_id }} {
    from {
      text-shadow: 
        0 0 {{ block.settings.glow_size }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_size | times: 2 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_size | times: 3 }}px {{ block.settings.glow_color }};
    }
    to {
      text-shadow: 
        0 0 {{ block.settings.glow_size | times: 1.5 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_size | times: 3 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_size | times: 4.5 }}px {{ block.settings.glow_color }};
    }
  }

  {% if block.settings.enable_hover_effect %}
    .ai-glowing-heading-{{ ai_gen_id }}:hover {
      text-shadow: 
        0 0 {{ block.settings.glow_size | times: 2 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_size | times: 4}}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_size | times: 6 }}px {{ block.settings.glow_color }};
      transition: text-shadow 0.3s ease;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-glowing-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
      padding: {{ block.settings.padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<{{ block.settings.heading_tag }}
  class="ai-glowing-heading-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {{ block.settings.heading_text }}
</{{ block.settings.heading_tag }}>

