{% schema %}
{
  "name": "Dummy Full Page Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "This is a Dummy Section"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Add some dummy content here to test layout, styles, and scripts."
    }
  ],
  "presets": [
    {
      "name": "Dummy Full Page Section"
    }
  ]
}
{% endschema %}

<section class="dummy-section" id="section-{{ section.id }}">
  <div class="dummy-wrapper">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subtext }}</p>

    <div class="dummy-gallery">
      <div class="dummy-card">Card 1</div>
      <div class="dummy-card">Card 2</div>
      <div class="dummy-card">Card 3</div>
    </div>

